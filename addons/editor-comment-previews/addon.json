{
  "name": "Editor comment previews",
  "description": "Allows you to preview the contents of comments by hovering over collapsed comments and blocks. You can use this to view comments that are off-screen, identify a loop block from the bottom by its preview, fit many long comments in a small space, and more.",
  "tags": ["sa-ported", "editor", "codeEditor", "featured"],
  "credits": [
    {
      "name": "lisa_wolfgang",
      "link": "https://scratch.mit.edu/users/lisa_wolfgang/"
    },
    {
      "name": "GarboMuffin"
    }
  ],
  "userstyles": [
    {
      "url": "userstyle.css",
      "matches": ["all"]
    }
  ],
  "userscripts": [
    {
      "url": "userscript",
      "matches": ["all"]
    }
  ],
  "settings": {
    "hover-view": {
      "name": "Hover collapsed comments to preview",
      "type": "boolean",
      "default": true
    },
    "hover-view-block": {
      "name": "Hover blocks to preview attached comments",
      "type": "boolean",
      "default": true
    },
    "hover-view-procedure": {
      "name": "Hover custom blocks to preview definition comments",
      "type": "boolean",
      "default": true
    },
    "delay": {
      "name": "Delay duration",
      "type": "select",
      "items": [
        {
          "id": "none",
          "name": "None",
          "value": "none"
        },
        {
          "id": "short",
          "name": "Short",
          "value": "short"
        },
        {
          "id": "long",
          "name": "Long",
          "value": "long"
        }
      ],
      "default": "short"
    },
    "follow-mouse": {
      "name": "Follow mouse",
      "type": "boolean",
      "default": true
    },
    "reduce-transparency": {
      "name": "Reduce transparency",
      "type": "boolean",
      "default": false
    },
    "reduce-animation": {
      "name": "Reduce animation",
      "type": "boolean",
      "default": false
    }
  },
  "dynamicEnable": true,
  "dynamicDisable": false,
  "enabledByDefault": false,
  "required": ["api"]
}
